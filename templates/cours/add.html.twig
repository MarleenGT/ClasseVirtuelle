{% extends 'base.html.twig' %}
{% block title 'Ajout cours' %}
{% block body %}
    {% if error is defined %}
        {{ error }}
    {% endif %}
    {% if conflit is defined %}
        {{ dump(conflit) }}
    {% endif %}
    {{ form(form) }}
{% endblock %}
{% block javascripts %}
    <script>

        let typeChoice = $("#cours_typeChoice");
        let sousgroupe = $("#cours_id_sousgroupe").parent('div');
        let classe = $("#cours_id_classe").parent('div');
        typeChoice.on('change', function () {
            sousgroupe.toggle();
            classe.toggle()
        })
        $(document).ready(function (){
            $("#cours_typeChoice_0").prop('checked', true);
            sousgroupe.toggle();
        })
    </script>
{% endblock %}