{% extends 'base.html.twig' %}
{% block title titre %}
{% block body %}
    {% if error is defined %}
        <h2>{{ error }}</h2>
    {% endif %}
    <div class="container jumbotron">
        <div class="offset-sm-2 col-sm-10 mb-5">
            <h2>{{ titre }}</h2>
        </div>

        {{ form_start(form) }}
        <div class="form-group row">
            {{ form_label(form.nom) }}
            <div class="col-sm-10">
                {{ form_widget(form.nom) }}
            </div>

        </div>
        <div class="form-group row">
            {{ form_label(form.prenom) }}
            <div class="col-sm-10">
                {{ form_widget(form.prenom) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.id_user.email) }}
            <div class="col-sm-10">
                {{ form_widget(form.id_user.email) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
